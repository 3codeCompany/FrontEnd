{
  "plugins": [
    "react"
  ],
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "no-set-state": "off",
    // override tslint-react rules here
    "jsx-wrap-multiline": false,
    "ordered-imports": false,
    "max-line-length": 200,
    "no-submodule-imports": false,
    "triple-equals": false,
    "jsx-no-multiline-js": false,
    "jsx-alignment": false,
    "jsx-no-bind": false,
    "jsx-no-lambda": false
  }
}
