{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
},

  "rules": {
    "quotes": [2, "double"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/prop-types": [2],
    "react/boolean-prop-naming": [2],
    "react/require-default-props": [2]
  },
  "plugins": [
    "react"
  ]
}
