{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "importHelpers": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    //"removeComments": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": [
      "ES2017",
      "DOM",
      "es5",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable",
      "dom.iterable"
    ]
  },
  "exclude": [
    "resources",
    "vendor",
    "assets",
    "data",
    "./node_modules/*",
    "node_modules"
  ]
}
