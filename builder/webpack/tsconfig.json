{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "removeComments": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": [
      "ES2017",
      "DOM",
      "es5",
      "es2015.collection",
      "es2015.iterable",
      "dom.iterable"
    ]
  },
  "exclude": [
    "resources",
    "vendor",
    "assets",
    "data"
  ]
}
